  <div class="explanation" id="explanation">
    ğŸ§  è§£èª¬:<br />
    ç°¡å˜ãƒ¢ãƒ¼ãƒ‰ (1ã€œ9)
  </div>

  <script>
    const scoreEl = document.getElementById("score");
    const aEl = document.getElementById("a");
    const bEl = document.getElementById("b");
    const cEl = document.getElementById("c");
    const answerEl = document.getElementById("answer");
    const resultEl = document.getElementById("explanation");

    let score = 0;
    let a = 0,
      b = 0,
      c = 0;

    function randomNumber() {
      return Math.floor(Math.random() * 9) + 1;
    }

    function nextProblem() {
      a = randomNumber();
      b = randomNumber();
      c = randomNumber();
      aEl.textContent = a;
      bEl.textContent = b;
      cEl.textContent = c;
      answerEl.value = "";
      resultEl.style.display = "none";
    }

    function checkAnswer() {
      const val = parseInt(answerEl.value, 10);
      if (val === a + b + c) {
        alert("æ­£è§£ã§ã™ï¼");
        score++;
        scoreEl.textContent = score;
      } else {
        alert("æ®‹å¿µï¼ã‚‚ã†ä¸€åº¦æŒ‘æˆ¦ã—ã¦ã¿ã¦ãã ã•ã„ã€‚");
      }
    }

    function resetScore() {
      score = 0;
      scoreEl.textContent = score;
    }

    document.getElementById("check").addEventListener("click", checkAnswer);
    document.getElementById("next").addEventListener("click", nextProblem);
    document.getElementById("reset").addEventListener("click", resetScore);
    document.getElementById("showHint").addEventListener("click", () => {
      resultEl.style.display = "block";
    });

    // â–¼ ãƒ†ãƒ³ã‚­ãƒ¼æ©Ÿèƒ½ â–¼
    const keys = document.querySelectorAll(".key");
    keys.forEach((key) => {
      key.addEventListener("click", () => {
        const val = key.textContent;
        if (key.classList.contains("clear")) {
          answerEl.value = "";
        } else if (key.classList.contains("del")) {
          answerEl.value = answerEl.value.slice(0, -1);
        } else {
          answerEl.value += val;
        }
      });
    });

    nextProblem();
  </script>
