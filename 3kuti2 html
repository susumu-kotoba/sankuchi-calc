<body>
  <h1>三口の計算アプリ（ローカル版）</h1>
  <h2>三口の計算チャレンジ（ローカル版）</h2>

  <div class="mode">現在のモード: <strong>簡単モード</strong></div>
  <div class="score">正解回数: <span id="score">0</span> 回</div>

  <div class="problem">
    <span id="a">0</span> + <span id="b">0</span> + <span id="c">0</span> = ?
  </div>

  <input type="text" id="answer" placeholder="答えを入力" readonly />

  <!-- ▼ 画面上テンキー ▼ -->
  <div class="keypad">
    <button class="key">1</button>
    <button class="key">2</button>
    <button class="key">3</button>
    <button class="key">4</button>
    <button class="key">5</button>
    <button class="key">6</button>
    <button class="key">7</button>
    <button class="key">8</button>
    <button class="key">9</button>
    <button class="key clear">C</button>
    <button class="key">0</button>
    <button class="key del">←</button>
  </div>

  <div class="buttons">
    <button id="check">答え合わせ</button>
    <button id="showHint">✨ 解説をみる</button>
    <button id="next">次の問題</button>
    <button id="reset">記録をリセット</button>
  </div>

  <div class="explanation" id="explanation">
    🧠 解説:<br />
    簡単モード (1〜9)
  </div>

  <script>
    const scoreEl = document.getElementById("score");
    const aEl = document.getElementById("a");
    const bEl = document.getElementById("b");
    const cEl = document.getElementById("c");
    const answerEl = document.getElementById("answer");
    const resultEl = document.getElementById("explanation");

    let score = 0;
    let a = 0,
      b = 0,
      c = 0;

    function randomNumber() {
      return Math.floor(Math.random() * 9) + 1;
    }

    function nextProblem() {
      a = randomNumber();
      b = randomNumber();
      c = randomNumber();
      aEl.textContent = a;
      bEl.textContent = b;
      cEl.textContent = c;
      answerEl.value = "";
      resultEl.style.display = "none";
    }

    function checkAnswer() {
      const val = parseInt(answerEl.value, 10);
      if (val === a + b + c) {
        alert("正解です！");
        score++;
        scoreEl.textContent = score;
      } else {
        alert("残念！もう一度挑戦してみてください。");
      }
    }

    function resetScore() {
      score = 0;
      scoreEl.textContent = score;
    }

    document.getElementById("check").addEventListener("click", checkAnswer);
    document.getElementById("next").addEventListener("click", nextProblem);
    document.getElementById("reset").addEventListener("click", resetScore);
    document.getElementById("showHint").addEventListener("click", () => {
      resultEl.style.display = "block";
    });

    // ▼ テンキー機能 ▼
    const keys = document.querySelectorAll(".key");
    keys.forEach((key) => {
      key.addEventListener("click", () => {
        const val = key.textContent;
        if (key.classList.contains("clear")) {
          answerEl.value = "";
        } else if (key.classList.contains("del")) {
          answerEl.value = answerEl.value.slice(0, -1);
        } else {
          answerEl.value += val;
        }
      });
    });

    nextProblem();
  </script>
